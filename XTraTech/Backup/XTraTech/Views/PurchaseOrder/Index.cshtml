@model XTraTech.Models.PurchaseOrderDetails
@{
    ViewBag.Title = "Index";
}
<div class="wrapper col3s">
<div id="intro">
    <script src="~/Scripts/SearchRq/SearchRs.js" type="text/javascript"></script>        
        <div class="rwrap" style="border: 1px solid grey;>
            <div class="results_holder">
                <div class="submission">
                    <p class="pge_head">Booking Successfully Confirmed!</p>
                </div>
				<table style="width: auto; margin:10px;">
					<tr>
						<th>Reference ID</th>
						<td>@Model.purchaseOrder.PurchaseOrderID</td>
					</tr>
					<tr>
						<th>Ticket by</th>
						<td>@Model.purchaseOrder.FlightDetails.FirstOrDefault().TktTimeLimit</td>
					</tr>
					<tr>
						<th>Booked at</th>
						<td>@Model.purchaseOrder.CreatedOn</td>
					</tr>
				</table>
                @if (Model.purchaseOrder != null)
                {
                    foreach (var PricedItinerary in Model.purchaseOrder.FlightDetails)
                    {
                    <div class="results">
                        <p class="pge_head" style="margin:0px 0px 0px 5px;">Travel Itinerary Summary</p>
                        @Html.Partial("~/Views/Shared/_Itinerary.cshtml", PricedItinerary)
               </div>            
                
                    }
                }
            
	        <div>
			<p class="pge_head" style="margin:0px 0px 10px 5px;">Passenger Details</p>
            @foreach (var item in Model.purchaseOrder.PassengerDetails)
            {
                <table style="width: auto; margin:10px;">
                    <tr>
                        <th>Ticket Number</th>
                        <td></td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>@item.Title @item.FirstName + @item.LastName (@item.PaxType)</td>
                    </tr>
                    <tr>
                        <th>Date Of Birth</th>
                        <td>@item.DOB</td>
                    </tr>
                    <tr>
                        <th>Gender</th>
                        <td>@item.Gender</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>@item.Email</td>
                    </tr>
                    <tr>
                        <th>Frequent Flyer Number</th>
                        <td>@item.FFNumber</td>
                    </tr>
                    <tr>
                        <th>Meal Preference</th>
                        <td>@item.MealPref</td>
                    </tr>
                    <tr>
                        <th>Seat Preference</th>
                        <td>@item.SeatPref</td>
                    </tr>
                    <tr>
                        <th>Passport</th>
                        <td>@item.PassportNumber</td>
                    </tr>
                    <tr>
                        <th>Date Of Expire</th>
                        <td>@item.PassportDOE</td>
                    </tr>
                    <tr>
                        <th>Nationality</th>
                        <td>@item.PassportNationality</td>
                    </tr>
                </table>
            }
        </div>
    </div>
	</div>
</div>
</div>
