@model XTraTechWeb.Models.Registration
@{
    ViewBag.Title = "Index";
}
<section id="content">
    <div class="container flight-detail-page">
        <div class="row">
            <div id="main" class="col-md-12">
                <div class="booking-section travelo-box">
                    <div class="person-information">
                        <h2>Client Registration Form</h2>
                        <hr />
                        @using (Html.BeginForm("Index", "Registration", FormMethod.Post, new { @class = "booking-form" }))
                        {
                            <h4>Company Information</h4>
                            <hr />
                            <div class="form-group row">
                                <div class="col-md-4">
                                    <label>Company Name</label>
                                    <input type="text" class="input-text full-width" value="" placeholder="">
                                </div>
                                <div class="col-md-4">
                                    <label>Member of</label>
                                    <input type="text" class="input-text full-width" value="" placeholder="">
                                </div>
                                <div class="col-md-2">
                                    <label>Country</label>
                                    <input type="text" class="input-text full-width" value="" placeholder="">
                                </div>
                                <div class="col-md-2">
                                    <label>City</label>
                                    <input type="text" class="input-text full-width" value="" placeholder="">
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-6">
                                    <label>Address Line1</label>
                                    <input type="text" class="input-text full-width" value="" placeholder="">
                                </div>
                                <div class="col-md-6">
                                    <label>Address Line1</label>
                                    <input type="text" class="input-text full-width" value="" placeholder="">
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-3">
                                    <label>State</label>
                                    <input type="text" class="input-text full-width" value="" placeholder="">
                                </div>
                                <div class="col-md-3">
                                    <label>Zip/Postal Code</label>
                                    <input type="text" class="input-text full-width" value="" placeholder="">
                                </div>
                            </div>
                            <h4>Contact Information</h4>
                            <hr />
                            <div class="form-group row">
                                <div class="col-md-3">
                                    <label>First Name</label>
                                    <input type="text" class="input-text full-width" value="" placeholder="">
                                </div>
                                <div class="col-md-3">
                                    <label>Last Name</label>
                                    <input type="text" class="input-text full-width" value="" placeholder="">
                                </div>
                                <div class="col-md-3">
                                    <label>Email</label>
                                    <input type="text" class="input-text full-width" value="" placeholder="">
                                </div>
                                <div class="col-md-3">
                                    <label>Phone Number</label>
                                    <input type="text" class="input-text full-width" value="" placeholder="">
                                </div>
                            </div>
                            <h4>Access Information</h4>
                            <hr />
                            <div class="form-group row">
                                <div class="col-md-4">
                                    <label>User name/Email</label>
                                    <input type="text" class="input-text full-width" value="" placeholder="">
                                </div>
                                <div class="col-md-4">
                                    <label>Password</label>
                                    <input type="text" class="input-text full-width" value="" placeholder="">
                                </div>
                                <div class="col-md-4">
                                    <label>Confirm password</label>
                                    <input type="text" class="input-text full-width" value="" placeholder="">
                                </div>
                            </div>
                            <h4>Email Information</h4>
                            <hr />
                            <div class="form-group row">
                                <div class="col-md-4">
                                    <label>Use defaults</label>
                                    <div>
                                        <label class="radio radio-inline radio-square checked">
                                            <input type="radio" name="defaults" checked="checked" value="M">Yes
                                        </label>
                                        <label class="radio radio-inline radio-square">
                                            <input type="radio" name="defaults" value="F">No
                                        </label>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <label>SMTP Address</label>
                                    <input type="text" class="input-text full-width" value="" placeholder="">
                                </div>
                                <div class="col-md-4">
                                    <label>Port number</label>
                                    <input type="text" class="input-text full-width" value="" placeholder="">
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-4">
                                    <label>Enable SSL</label>
                                    <div>
                                        <label class="radio radio-inline radio-square checked">
                                            <input type="radio" name="ssl" checked="checked" value="M">Yes
                                        </label>
                                        <label class="radio radio-inline radio-square">
                                            <input type="radio" name="ssl" value="F">No
                                        </label>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <label>From email address</label>
                                    <input type="text" class="input-text full-width" value="" placeholder="">
                                </div>
                                <div class="col-md-4">
                                    <label>Email password</label>
                                    <input type="text" class="input-text full-width" value="" placeholder="">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox"> By continuing, you agree to the <a href="#"><span class="skin-color">Terms and Conditions</span></a>.
                                    </label>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-6 col-md-5">
                                    <button type="submit" class="full-width btn-large">REGISTER CLIENT</button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
