<body class="soap-login-page style3 body-blank">
    <div id="page-wrapper" class="wrapper-blank">
        <section id="content">
            <div class="container">
                <div id="main">
                    <h1 class="logo block">
                        <a href="index.html" title="BookeTickets - home">
                            <img src="~/images/logo/bketixfff.png" alt="BookeTickets HTML5 Template" />
                        </a>
                    </h1>
                    <div class="welcome-text box" style="">Welcome to BookeTickets.com!</div>
                    <p class="white-color block" style="font-size: 1.5em;">Please login to your account.</p>
                    <img src="~/images/pages/login/plane.png" class="plane animated" alt="" data-animation-type="fadeInRight" data-animation-duration="1" data-animation-delay="1">
                    <div class="col-sm-8 col-md-8 col-lg-5 no-float no-padding center-block">
                        @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { @class = "login-form", id="LoginForm" }))
                        {
                            <div class="form-group">
                                <label class="checkbox">
                                    @Html.CheckBoxFor(m => m.Member) member login
                                </label>
                            </div>
                            <div class="form-group row" id="firstname">
                                <div class="col-md-6">
                                    @Html.TextBoxFor(m => m.FirstName, new { @class = "input-text input-large full-width validate[required,custom[email]]", @data_prompt_position = "topRight:-30", placeholder = "first name" })
                                </div>
                                <div class="col-md-6">
                                    @Html.TextBoxFor(m => m.LastName, new { @class = "input-text input-large full-width validate[required,custom[email]]", @data_prompt_position = "topRight:-30", placeholder = "first name" })
                                </div>
                            </div>
                            <div class="form-group row" id="company">
                                <div class="col-md-6">
                                    @Html.TextBoxFor(m => m.CompanyName, new { @class = "input-text input-large full-width validate[required,custom[email]]", @data_prompt_position = "topRight:-30", placeholder = "first name" })
                                </div>
                                <div class="col-md-6">
                                    @Html.TextBoxFor(m => m.Country, new { @class = "input-text input-large full-width validate[required,custom[email]]", @data_prompt_position = "topRight:-30", placeholder = "first name" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.UserName, new { @class = "input-text input-large full-width validate[required,custom[email]]", @data_prompt_position = "topRight:-30", placeholder = "enter your email address" })
                                @*<input type="text" class="input-text input-large full-width" placeholder="enter your email address">*@
                            </div>
                            <div class="form-group">
                                @Html.PasswordFor(m => m.Password, new { @class = "input-text input-large full-width validate[required]", @data_prompt_position = "topRight:-30", placeholder = "enter your password" })
                                @*<input type="text" class="input-text input-large full-width" placeholder="enter your password">*@
                            </div>
                            <div class="form-group">
                                @Html.PasswordFor(m => m.ConfirmPassward, new { @class = "input-text input-large full-width validate[required,equals[Password]]", @data_prompt_position = "topRight:-30", placeholder = "enter your password" })
                                @*<input type="text" class="input-text input-large full-width" placeholder="enter your password">*@
                            </div>
                            <div class="form-group">
                                <label class="checkbox">
                                    <input type="checkbox" value="">remember my details
                                </label>
                            </div>
                            <button type="submit" class="btn btn-large full-width yellow">ACCESS NOW</button>
                        }
                    </div>
                </div>

            </div>
        </section>
        @*<div class="container">
                <img src="images/pages/login/plane.png" class="plane animated" alt="" data-animation-type="fadeInRight" data-animation-delay="1">
            </div>*@
