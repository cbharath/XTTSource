    <script>
        tjq(document).ready(function () {
            if (tjq("input[name=Member]").is(':checked')) {
                tjq("input[name=FirstName]").hide();
                tjq("input[name=LastName]").hide();
                tjq("#firstname").hide();
                tjq("input[name=CompanyName]").hide();
                tjq("input[name=Country]").hide();
                tjq("#company").hide();
                tjq("input[name=ConfirmPassward]").hide();
            }
            else {
                tjq("input[name=FirstName]").show();
                tjq("input[name=LastName]").show();
                tjq("#firstname").show();
                tjq("input[name=CompanyName]").show();
                tjq("input[name=Country]").show();
                tjq("#company").show();
                tjq("input[name=ConfirmPassward]").show();
            }

            tjq("input[name=Member]").click(function () {
                if (tjq("input[name=Member]").is(':checked')) {
                    tjq("input[name=FirstName]").hide();
                    tjq("input[name=LastName]").hide();
                    tjq("#firstname").hide();
                    tjq("input[name=CompanyName]").hide();
                    tjq("input[name=Country]").hide();
                    tjq("#company").hide();
                    tjq("input[name=ConfirmPassward]").hide();
                }
                else {
                    tjq("input[name=FirstName]").show();
                    tjq("input[name=LastName]").show();
                    tjq("#firstname").show();
                    tjq("input[name=CompanyName]").show();
                    tjq("input[name=Country]").show();
                    tjq("#company").show();
                    tjq("input[name=ConfirmPassward]").show();
                }
            });
        });
    </script>
